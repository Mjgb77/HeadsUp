<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mjgonzales.myapp.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageButton
                android:id="@+id/animalsButton"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/animals"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/animals" />

            <ImageButton
                android:id="@+id/sportsButton"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="false"
                android:contentDescription="@string/sports"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/medal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sports" />

            <ImageButton
                android:id="@+id/expressionsButton"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/emotions"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/emotions" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emotions" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
